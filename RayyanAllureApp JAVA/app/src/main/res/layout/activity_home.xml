<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/omg"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black">

<!--        <data>
                <variable name="id" text
-->

        <!-- Logo -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/myicon"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Page"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="left"/>

        <Button
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:text="Notifications"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/btnGoNotify"
            android:backgroundTint="#C51212"
            android:textSize="12sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Log out"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btnGoMain"
            android:backgroundTint="#C51212"
            android:textSize="12sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- Your existing layout elements go here -->

        <TextView
            android:id="@+id/txtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Null: 404"
            android:textAlignment="center"
            android:textColor="#F1EEEE"
            android:textSize="44sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:layout_marginTop="10dp"
            android:id="@+id/btnGoCalc"
            android:backgroundTint="#CA9A09"
            android:textSize="20sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Show Contacts"
            android:layout_marginTop="20dp"
            android:id="@+id/btnGoContacts"
            android:backgroundTint="#CA9A09"
            android:textSize="20sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add Places"
            android:layout_marginTop="20dp"
            android:id="@+id/btnGoForm"
            android:backgroundTint="#CA9A09"
            android:textSize="20sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Check Places"
            android:layout_marginTop="20dp"
            android:id="@+id/btnGoPlaces"
            android:backgroundTint="#CA9A09"
            android:textSize="20sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:layout_marginTop="20dp"
            android:id="@+id/btnGoProfile"
            android:backgroundTint="#CA9A09"
            android:textSize="20sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add and Show Data"
            android:layout_marginTop="20dp"
            android:id="@+id/btnGoDb"
            android:backgroundTint="#CA9A09"
            android:textSize="20sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Get API data"
            android:layout_marginTop="20dp"
            android:id="@+id/btnGoAPI"
            android:backgroundTint="#CA9A09"
            android:textSize="20sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="POST API"
            android:layout_marginTop="20dp"
            android:id="@+id/btnGoAPIPost"
            android:backgroundTint="#CA9A09"
            android:textSize="20sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Custom Alert "
            android:layout_marginTop="20dp"
            android:id="@+id/btnGoCustomDialog"
            android:backgroundTint="#CA9A09"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>
