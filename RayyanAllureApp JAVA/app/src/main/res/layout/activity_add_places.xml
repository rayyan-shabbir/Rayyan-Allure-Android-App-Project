<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:paddingBottom="11dp"
    android:background="@color/design_default_color_on_secondary"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.AddPlacesActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="#fff"
            android:id="@+id/txtTitle"
            android:layout_margin="21sp"
            android:text="Add Places"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Name"
            android:background="#fff"
            android:padding="13dp"
            android:id="@+id/edtName"
            android:layout_marginBottom="13sp"
            android:layout_margin="28dp"
            android:inputType="text"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter address"
            android:background="#fff"
            android:padding="13dp"
            android:id="@+id/edtAddress"
            android:layout_marginBottom="11sp"
            android:layout_margin="28dp"
            android:inputType="text"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/btnAction"
                android:backgroundTint="#54910C"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:layout_marginLeft="40dp"
                android:textSize="22dp"
                android:gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Places"
                android:id="@+id/btnGoShowPlaces"
                android:backgroundTint="#B80606"
                android:textSize="22dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>